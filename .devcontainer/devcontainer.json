// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "GGL Core Pulumi",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",
	"features": {
		"ghcr.io/dhoeric/features/google-cloud-cli:1": {
			"installGkeGcloudAuthPlugin": true
		},
		"ghcr.io/devcontainers-extra/features/pulumi:1": {
			"bashCompletion": true,
			"version": "3.43.0"
		},
		"ghcr.io/devcontainers-extra/features/pylint:2": {
			"version": "latest"
		}
	},

	// Use 'postCreateCommand' to run commands after the container is created.

	"customizations": {
		"vscode": {
			"extensions": [
				"DavidAnson.vscode-markdownlint",
				"ms-python.python",
				"pulumi.pulumi-vscode-tools",
				"pulumi.pulumi-lsp-client"
			]
		}
	},
	"remoteUser": "vscode",
	"workspaceMount": "source=ggl_core_infra,target=/workspaces/ggl_core_infra,type=volume",
	"workspaceFolder": "/workspaces/ggl_core_infra",
	"postCreateCommand": "install -o vscode -g vscode -D /commandhistory && install /commandhistory/ && install -o vscode -g vscode /dev/null /commandhistory/.bash_history && SNIPPET='export PROMPT_COMMAND=\"history -a\" && export HISTFILE=/commandhistory/.bash_history' && echo $SNIPPET >> '/home/vscode/.bashrc' && chown -R vscode:vscode /workspace/ && cd /workspaces && git clone https://github.com/GalaxyGridLabs/ggl_core_infra.git",
	"mounts": [
		"source=ggl_core_infra-bashhistory,target=/commandhistory,type=volume"
	]
}
